<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="142dp">
    <ImageView
        android:id="@+id/send_media_lv_item_iv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_width="75dp"
        android:layout_height="105dp" />

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="215dp"
        android:layout_height="105dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/send_media_lv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="@string/media_name"/>
            <TextView
                android:id="@+id/send_media_lv_item_name_tv"
                android:layout_toRightOf="@id/send_media_lv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="007-量子危机"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/send_media_lv_item_country"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="@string/media_country"/>
            <TextView
                android:id="@+id/send_media_lv_item_country_tv"
                android:layout_toRightOf="@id/send_media_lv_item_country"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="美国"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/send_media_lv_item_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="@string/media_type"/>
            <TextView
                android:id="@+id/send_media_lv_item_type_tv"
                android:layout_toRightOf="@id/send_media_lv_item_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="科幻动作"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/send_media_lv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="@string/media_name"/>
            <TextView
                android:id="@+id/send_media_lv_item_time_tv"
                android:layout_toRightOf="@id/send_media_lv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="007-量子危机"/>
        </RelativeLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/send_media_lv_item_cb"
        android:layout_width="330dp"
        android:layout_height="142dp"
        android:button="@null"
        android:background="@drawable/bluestrokelight_big_checkbox"
        android:checked="true"/>
</RelativeLayout>