<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    tools:context="com.dj.dianjiao.activity.SystemSetActivity">
    <include layout="@layout/activity_base"/>
    <RadioGroup
        android:id="@+id/ss_rg"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_width="150dp"
        android:layout_height="636dp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/ss_time_sync_rb"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:button="@null"
            android:background="@drawable/blue_black_bg_checkbox"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/time_sync"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/ss_server_address_rb"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:button="@null"
            android:background="@drawable/blue_black_bg_checkbox"
            android:layout_marginTop="1dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/server_address"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/ss_restart_time_rb"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:button="@null"
            android:background="@drawable/blue_black_bg_checkbox"
            android:layout_marginTop="1dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/restart_time"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/ss_remote_update_rb"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:button="@null"
            android:background="@drawable/blue_black_bg_checkbox"
            android:layout_marginTop="1dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/remote_update"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/ss_online_monitor_rb"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:button="@null"
            android:background="@drawable/blue_black_bg_checkbox"
            android:layout_marginTop="1dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/online_monitor"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/ss_import_export_rb"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:button="@null"
            android:background="@drawable/blue_black_bg_checkbox"
            android:layout_marginTop="1dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/import_export"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/ss_product_info_rb"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:button="@null"
            android:background="@drawable/blue_black_bg_checkbox"
            android:layout_marginTop="1dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/product_info"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_width="150dp"
        android:layout_height="636dp"
        android:orientation="vertical"
        android:clickable="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@mipmap/system_set_1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@mipmap/system_set_2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@mipmap/system_set_3"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@mipmap/system_set_4"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@mipmap/system_set_5"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@mipmap/system_set_6"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@mipmap/system_set_7"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_gray_bg">

        <TextView
            android:id="@+id/ss_xitongpeizhi_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/xitongpeizhi"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <View
            android:id="@+id/ss_xitongpeizhi_view"
            android:layout_toRightOf="@id/ss_xitongpeizhi_tv"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/ss_title_tv"
            android:layout_toRightOf="@id/ss_xitongpeizhi_view"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/xitongpeizhi"
            android:textColor="@color/login_btn_blue"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="556dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="30dp">
        <include layout="@layout/system_set_time_sync"/>
        <include layout="@layout/system_set_server_address"/>
        <include layout="@layout/system_set_restart_time"/>
        <include layout="@layout/system_set_remote_update"/>
        <include layout="@layout/system_set_online_monitor"/>
        <include layout="@layout/system_set_import_export"/>
        <include layout="@layout/system_set_product_info"/>
    </RelativeLayout>
</RelativeLayout>
