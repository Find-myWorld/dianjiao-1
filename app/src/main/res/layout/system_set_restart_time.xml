<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ss_restart_time_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bluestroke_gray_bg"
    android:visibility="gone">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/ss_restart_time_lv"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:minHeight="300dp"
            android:scrollbars="none"
            android:divider="@null"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:dividerHeight="10dp">

        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_top_blue_stroke">
        <Button
            android:id="@+id/ss_restart_time_delete_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/shape_del_gray_smallcorner_bg"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="@string/space_delete"/>

        <Button
            android:id="@+id/ss_restart_time_add_btn"
            android:layout_toLeftOf="@id/ss_restart_time_delete_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_green_smallcorner_bg"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="@string/space_add"/>
    </RelativeLayout>
</RelativeLayout>