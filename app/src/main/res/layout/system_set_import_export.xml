<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ss_import_export_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="2dp"
        android:background="@drawable/shape_bluestroke_nocorner_gray_bg">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/impore_export_blue"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="@string/file_import" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:gravity="center_vertical|right"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="@string/file_import_address"/>

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/shape_white_bigcorner_bg">
            <EditText
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:gravity="center_vertical|left"
                android:background="@null"
                android:text="/mnt/adcard/external_sd"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_deep_blue_rightcorner">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/folder"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:text="@string/browse"/>
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:layout_centerVertical="true"
            android:layout_marginLeft="820dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_green_smallcorner_bg"
            android:gravity="center"
            android:text="@string/sure_import"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:padding="2dp"
        android:background="@drawable/shape_bluestroke_nocorner_gray_bg">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/impore_export_blue"
            android:text="@string/file_export"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="150dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:text="@string/file_export_address"/>
            <RelativeLayout
                android:layout_marginLeft="180dp"
                android:layout_width="600dp"
                android:layout_height="50dp"
                android:background="@android:color/black">
                <EditText
                    android:layout_width="450dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:hint="@string/search_file"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="450dp"
                    android:src="@mipmap/search"
                    android:padding="10dp"/>
                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/browse_gray">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/folder"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="10dp"
                        android:text="@string/browse"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>
                </RelativeLayout>
            </RelativeLayout>

            <ListView
                android:id="@+id/ss_import_export_file_lv"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:divider="@null"
                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb_blue"
                android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track_black"
                android:scrollbarFadeDuration="0"
                android:scrollbarSize="5dp"
                android:background="@drawable/shape_gray_smallcorner_bg">
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="120dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:text="@string/file_export_address"/>

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_marginLeft="180dp"
                android:background="@drawable/shape_white_bigcorner_bg">
                <EditText
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical|left"
                    android:background="@null"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp"/>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_deep_blue_rightcorner">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/folder"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="10dp"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:text="@string/browse"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/shape_blue_smallcorner_bg"
            android:gravity="center"
            android:text="@string/sure_export"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>
</RelativeLayout>